<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:skin id="guidedtour"
      src        = "{require('ext/guidedtour/guidedtour').skin}"
      media-path = "/static/ext/guidedtour/images/" />
      
    <a:window
      id        = "winTourGuide"
      title     = "Guided Tour"
      center    = "true"
      modal     = "true"
      buttons   = "close"
      kbclose   = "true"
      width     = "450"
      skin      = "bk-window"
      class     = "relative">
        <a:vbox edge="10" padding="5">
            <a:text id="winTourDesc" height="150" class="tgDesc"/>
            <a:hbox padding="5" pack="end">
                <a:button id="winTourButtonStart" default="2" class="btn-green" skin="btn-default-css3" onclick = "
                            require('ext/guidedtour/guidedtour').startTour();
                        ">Let's start!</a:button>
                <a:button id="winTourButtonClose" default="2" class="btn-green" skin="btn-default-css3" onclick = "
                            winTourGuide.hide();
                        " >Thanks!</a:button>
            </a:hbox>
        </a:vbox>
    </a:window>
    <a:window
        id        = "tourControlsDialog"
        title     = ""
        center    = "true"
        modal     = "true"
        buttons   = "close"
        kbclose   = "false"
        width     = "325"
        skinset   = "transparentDialog"
        skin      = "bk-window"
        class     = "tgDialog">
        <a:vbox>
        <a:text />
                <a:hbox padding="10" pack="end" edge="6 50 10">
                <!-- Play pause etc -->
                <a:button
                    id = "btnTourStepBack"
                    class = "tgControlButton tgBackButton"
                    skin="btn-default-css3"
                    disabled = "true"
                    tooltip="Go Back"
                    onclick = "require('ext/guidedtour/guidedtour').stepBack();"
                    width="75"
                    height="30"/>
                <a:button
                    id = "btnTourPlay"
                    class = "btn-green tgPlayButton"
                    tooltip = "Play"
                    onclick = "require('ext/guidedtour/guidedtour').togglePlay();"
                    width    = "50"
                    height = "30"
                    skin="btn-default-css3"
                />
                <a:button
                    id = "btnTourStepForward"
                    class = "tgControlButton tgForwardButton"
                    skin="btn-default-css3"
                    tooltip="Go Forward"
                    onclick = "require('ext/guidedtour/guidedtour').stepForward();"   
                    width="75"
                    height="30"
                />
                <a:divider skin="c9-divider" />
                 <a:button onclick="require('ext/guidedtour/guidedtour').shutdown()" skin="btn-default-css3">Quit</a:button>
            </a:hbox>
            </a:vbox>
    </a:window>
        
    <a:window
      id        = "winTourText"
      title     = ""
      center    = "false"
      modal     = "false"
      buttons   = ""
      kbclose   = "false"
      width     = "160"
      skinset   = "guidedtour"
      skin      = "guidetool"
      draggable = "false"
      >
        <a:text id="textTourDesc" flex="1" />     
    </a:window>
</a:application>